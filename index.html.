    <script>
        function copiarPix() {
            const chavePix = "doacaoparalucas@gmail.com";
            const botao = document.getElementById("pixButton");
            const confirmacao = document.getElementById("confirmacaoPix");

            if (navigator.clipboard) {
                navigator.clipboard.writeText(chavePix).then(() => {
                    mostrarConfirmacao(botao, confirmacao);
                }).catch(() => {
                    copiarComFallback(chavePix, botao, confirmacao);
                });
            } else {
                copiarComFallback(chavePix, botao, confirmacao);
            }
        }

        function copiarComFallback(chavePix, botao, confirmacao) {
            const textarea = document.createElement("textarea");
            textarea.value = chavePix;
            document.body.appendChild(textarea);
            textarea.select();

            try {
                document.execCommand('copy');
            } catch (e) {}

            document.body.removeChild(textarea);
            mostrarConfirmacao(botao, confirmacao);
        }

        function mostrarConfirmacao(botao, confirmacao) {
            confirmacao.style.display = 'block';
            botao.textContent = '‚úÖ CHAVE COPIADA! OBRIGADO!';
            botao.classList.add('copied');

            setTimeout(() => {
                botao.textContent = 'COPIAR CHAVE PIX E AJUDAR O LUCAS';
                botao.classList.remove('copied');
            }, 3000);
        }

        window.addEventListener('load', () => {
            const pixSection = document.querySelector('.pix-section');
            setTimeout(() => {
                pixSection.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }, 500);
        });
    </script>

